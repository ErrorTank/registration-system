.nav-bar {
  position fixed
  width 100%
  z-index 3
  background-color white
  color #6c757e
  box-shadow: 0px 1px 4px #C9C9C9

  .brand {
    padding 6px 0
    cursor pointer

    img {
      height 50px
      vertical-align middle
    }

    span {
      font-size lg - 0.2rem
      font-family: 'Fredoka One', cursive;
      color tikiblue
      display inline-block
      vertical-align middle
    }
  }

  .wrapper {
    display flex
    align-items center
    justify-content space-between

    .navs {
      display flex
      .sign-out{
        border-top 1px solid grey
        padding-top 15px
        button{
          width 100%
          display block
          font-size 13px
          padding 5px
          color white
          background-color #3498db
        }
      }
      .each-nav {
        padding 12px 17px
        cursor pointer
        transition all 0.1s ease
        position relative
        font-size 14px
        .full-name{
          max-width 100px
          white-space nowrap
          margin-right 6px
          display inline
        }
        i{
          display inline-block
          vertical-align baseline
        }
        .dropdown-panel {
          position absolute
          background-color white
          left 0
          border-radius 0 0 3px 3px
          width 220px
          padding 14px 0

          box-shadow: 0px 1px 10px #B5B5B5
          border-top 2px solid tikiblue

          .dropdownItem {
            padding 10px 0
            padding-left 18px
            padding-right 10px
            color #6c757e
            font-size 13px

            &:hover {
              color tikiblue
            }

            &.active {
              color tikiblue
            }
          }
        }
        margin-left 10px
        position relative

        .acc-icon {
          margin-right 4px
        }

        &.active {
          color tikiblue

        }

        &:hover {
          color tikiblue
        }
      }
    }

  }
}