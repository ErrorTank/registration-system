.user-section{
  align-self center
  margin-left auto
  cursor pointer
  display flex
  align-items center
  position relative
  .full-name{
    font-size 1.5rem
    margin-left 1rem
    margin-right 1rem
    max-width 150px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  }
  .user-dropdown{
    background-color white
    box-shadow 0 2px 30px 6px rgba(0,0,0,.1)
    border-radius 0.25rem
    padding 8px 0
    top 170%
    right 0
    position absolute
    .dropdown-item{
      padding .7em 20px
      display flex
      align-items center
      font-size 2.5rem
      color lightgrey
      &:hover{
        background-color darken(white, 5%)
      }
      span{
        font-size 1.4rem
        margin-left 1.2rem
      }
    }
  }
}