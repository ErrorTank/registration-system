.account-basic-form{
  min-width 500px
  max-width 800px
  .form-title{
    margin-bottom 30px
    font-size 20px
    font-weight 500
    color sectionTitle
    display inline-block
    padding-right 100px
    padding-bottom 5px
    border-bottom 3px solid info
  }
  margin auto
  margin-top 50px
  .form-row{
    display flex
    padding 0 5px
    justify-content space-between
    .account-basic-input{
      flex 0 0 48%
    }
  }
}