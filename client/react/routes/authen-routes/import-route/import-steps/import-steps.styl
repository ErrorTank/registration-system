.upload-excel{
  margin-top 20px
  display flex

}
.data-type-picker{
  margin-top 5rem

  .separate{

    width 40rem
    margin 15px auto
    display flex
    align-items center
    span{
      &:nth-of-type(2){
        font-size 1.4rem
        margin 0 10px
      }
      &:nth-of-type(odd){
        height 1px
        border-radius 6px
        flex-grow 1
        background-color common-border
      }
    }
  }
  .option{
    margin auto
    padding 0.8rem 2rem
    text-align center
    width 40rem
    color white
    background-color inverse
    font-size 1.4rem
    font-weight 500
    border-radius 4px
    cursor pointer
    &:hover{
      background-color darken(inverse, 10%)
    }

  }
}