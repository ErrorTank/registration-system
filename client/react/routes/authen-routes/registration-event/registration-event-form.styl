.MuiGrid-item{
  align-items center !important
}
.manage-form{
  .form-actions{
    margin-top 50px
    padding-top 20px
    text-align right
    button{
      margin-left 10px
    }
    border-top 1px solid common-border
  }
  .date-picker-wrapper{
    max-width 350px
  }
  padding 20px
  .form-row{
    margin-bottom 20px
    justify-content space-between
    .form-item{
      .common-select{
        max-width 350px
      }
      .form-error{
        font-size 1.3rem
        color danger
      }
      .MuiFormControl-root{
        width 100% !important
        .MuiInputBase-root{
          font-size 16px !important
        }

      }
      .form-label{
        font-size 1.6rem
        color inverse
        font-weight 500
        margin-bottom 6px
      }
      &.col-4{
        flex 0 0 32% !important
      }
      &.col-6{
        flex 0 0 49% !important
      }
    }
  }

}