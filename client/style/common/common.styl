.btn-blue{
  color white
  background-color tikiblue
  transition background-color 0.1s ease
  &:hover{
    background-color darken(tikiblue, 25%)
  }
}
.btn-confirm{
  color white
  background-color #0d3578
  transition background-color 0.1s ease
  &:hover{
    background-color darken(#0d3578, 25%)
  }
}
.btn-cancel{
  color #0d3578
  background-color white
  border 1px solid grey
  transition background-color 0.1s ease
  &:hover{
    background-color darken(white, 5%)
  }
}
.fade-enter {
  opacity: 0;
}
.fade-enter-active {
  opacity: 1;
  transition: opacity 300ms;
}
.fade-exit {
  opacity: 1;
}
.fade-exit-active {
  opacity: 0;
  transition: opacity 300ms;
}
.p-title{
  text-align center
  color #1a1a1a
  font-size 30px
  margin-bottom 20px !important
  font-weight 550
}
.err-text{
  font-size 12px
  margin-top 5px
  color #f4516c
}
.btn-disabled{
  pointer-events none
  opacity 0.5
  cursor not-allowed
}
.text-select-disable{
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
}
.yellow-btn{
  color tikiblack
  background-color tikiyellow
  font-size: 13px;
  width: 220px;
  padding: 10px 20px;
  &:hover{
    background-color darken(tikiyellow, 18%);
  }
}
.content-container{
  width 1200px !important
  max-width none !important
}
.more-btn{
  color tikiblue
  width 200px
  padding 6px 0
  border 1px solid tikiblue
  background-color white
  font-size 14px
  border-radius 4px
  margin 20px 0
  transition all 0.1s ease !important
  &:hover{
    background-color tikiblue
    color white
  }
}
.taka-section{
