*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {

  font-size: 62.5%;

}
body {
  font-family: "Roboto", sans-serif;
  box-sizing: border-box;
  overflow-x hidden
  margin 0
  padding 0
  font-weight: 300;
  line-height: 1.6;
  color: dark
}

.btn-disabled{
  pointer-events none
  opacity 0.5
  cursor not-allowed
}

.text-select-disable{
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
}
button
  cursor pointer
a
  text-decoration none
ul{
  padding 0
  margin 0
  list-style-type none
  li{
    padding 0
  }
}
